<form method="get" action="/quizes/<%= quiz.id %>/answer" >
	pregunta: <%= quiz.pregunta %><br>
	<input type="text" name="respuesta" value="Respuesta">
	<input type="submit" value="Enviar">
</form>

<p><a href="/quizes/<%= quiz.id %>/comments/new"><button>Nuevo comentario</button></a></p>

<p><strong>Comentarios:</strong></p>
<!-- for (var i=0; i<quiz.Comment.length; i++) -->
<% for(var i=0; i<quiz.Comments.length; i++){%>
	<%if(quiz.Comments[i].publicado || session.user){%>
	<p>- <%= quiz.Comments[i].texto %></p>
		<%if(session.user && !quiz.Comments[i].publicado){%>
		<a href="/quizes/<%= quiz.id %>/comments/<%=quiz.Comments[i].id%>/publish">
														<button>Publicar</button>
		<% } %>
	<% } %>
<% } %>

